{
    "name": "yourls/composer-installer",
    "description": "YOURLS' custom Composer installer for YOURLS plugins",
    "type": "composer-plugin",
    "license": "MIT",
    "homepage": "https://github.com/yourls/composer-installer",
    "keywords": [
        "yourls",
        "yourls-plugin"
    ],
    "require": {
        "composer-plugin-api": "^1.0",
        "wikimedia/composer-merge-plugin": "^1.4",
        "symfony/thanks": "^1.2"
    },
    "require-dev": {
        "composer/composer": "^2.0.13",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "YOURLS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YOURLS\\": "tests/"
        }
    },
    "extra": {
        "class": "YOURLS\\ComposerInstaller\\Plugin"
    }
}
